{
  "name": "express-ts-auth-service",
  "version": "1.0.0",
  "description": "A ready-to-use authentication service build with express.js, that provides secure and reliable authentication using JSON Web Tokens (JWT) and refresh token rotation",
  "author": "Louis-Kaan Ay",
  "license": "MIT",
  "private": false,
  "main": "./dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "drizzle-kit push & tsx --tsconfig ./tsconfig.json ./src/server.ts",
    "build": "tsc --project './tsconfig.build.json'",
    "start": "pnpm run build && cross-env NODE_ENV=production node --trace-warnings ./dist/index.js",
    "lint": "biome lint --write src/**/*.ts __test__/**/*.test.ts",
    "format": "biome format --write src/**/*.ts __test__/**/*.test.ts",
    "test": "",
    "test:watch": "",
    "coverage": "",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.48.0",
    "@types/formidable": "^3.4.5",
    "@types/multer": "^1.4.12",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.38.4",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "formidable": "^3.5.2",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "husky": "^9.1.7",
    "jimp": "^1.6.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "1.4.5-lts.1",
    "postgres": "^3.4.5",
    "tsx": "^4.19.2",
    "utility-types": "^3.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "xss": "^1.0.14",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^5.0.5",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/qs": "^6.9.18",
    "@types/uuid": "^9.0.1",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.2",
    "typescript": "5.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Louis3797/express-ts-auth-service"
  },
  "bugs": {
    "url": "https://github.com/Louis3797/express-ts-auth-service/issues"
  },
  "homepage": "https://github.com/Louis3797/express-ts-auth-service",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm dlx biome check --write src/**/*.ts"
    ]
  }
}
